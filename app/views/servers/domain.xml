<?xml version="1.0"?>
<domain type='kvm'>
  <name><%= @server.name %></name>
  <uuid><%= @server.uuid %></uuid>
  <memory><%= @server.memory * 1024 %></memory>
  <currentMemory><%= @server.memory * 1024 %></currentMemory>
  <vcpu><%= @server.cpus %></vcpu>
  <os>
    <type arch='x86_64' machine='rhel5.4.0'>hvm</type>
    <boot dev='hd'/>
  </os>
  <features>
    <acpi/>
    <apic/>
    <pae/>
  </features>
  <clock offset='utc'/>
  <on_poweroff>destroy</on_poweroff>
  <on_reboot>restart</on_reboot>
  <on_crash>restart</on_crash>
  <devices>
    <emulator>/usr/libexec/qemu-kvm</emulator>
    <disk type='block' device='disk'>
      <driver name='qemu' cache='none'/>
      <source dev='%%device%%'/>
      <target dev='vda' bus='virtio'/>
    </disk>
    <% @server.interfaces.each do |interface| %>
    <interface type='bridge'>
      <mac address='<%= interface.mac_address %>'/>
      <source bridge='br<%= interface.number %>'/>
      <model type='virtio'/>
    </interface>
    <% end %>
    <serial type='pty'>
      <target port='0'/>
    </serial>
    <console type='pty'>
      <target port='0'/>
    </console>
  </devices>
</domain>
